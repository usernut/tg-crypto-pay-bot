{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "strict": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "strictNullChecks": false, //Auto: true
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"]
}